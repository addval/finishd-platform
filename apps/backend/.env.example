# Finishd Backend Environment Variables

# Server
NODE_ENV=development
PORT=3000

# Database (PostgreSQL with Drizzle ORM)
DATABASE_URL=postgresql://finishd:finishd123@localhost:5432/finishd_db

# Redis (for OTP storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ACCESS_SECRET=your-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ENCRYPTION_KEY=

# Typesense (Search Engine)
TYPESENSE_API_KEY=finishd-typesense-api-key
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# SMS Provider (Mock in development)
SMS_PROVIDER=mock
# For production, use one of: msg91, twilio, firebase
# MSG91_AUTH_KEY=your-msg91-auth-key
# MSG91_SENDER_ID=FINSHD
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_DEV_CODE=123456

# Email Configuration (Brevo - for notifications)
BREVO_API_KEY=
BREVO_SENDER_NAME=Finishd
BREVO_SENDER_EMAIL=noreply@finishd.in

# Frontend URL
APP_BASE_URL=http://localhost:5173

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Logging
LOG_LEVEL=debug
