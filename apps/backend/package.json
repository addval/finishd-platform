{
  "name": "@rituality/backend",
  "version": "1.0.0",
  "description": "Rituality Platform Backend API",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start:dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "tsx src/scripts/migrate.ts",
    "seed": "tsx src/scripts/seed.ts",
    "reset": "pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.562.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^9.0.0",
    "redis": "^4.7.0",
    "sequelize": "^6.37.7",
    "sib-api-v3-sdk": "^8.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^7.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "nodemon": "^3.1.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
