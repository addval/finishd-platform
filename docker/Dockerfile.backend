# Backend Dockerfile
# Node.js + Express + TypeScript

FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm@8

# Set working directory
WORKDIR /app

# Copy package files
COPY apps/backend/package.json apps/backend/pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy backend source
COPY apps/backend ./

# Expose port
EXPOSE 3000

# Start command
CMD ["pnpm", "run", "dev"]
